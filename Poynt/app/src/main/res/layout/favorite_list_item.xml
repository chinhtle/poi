<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_item_background">

    <!-- Title container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/poyntListItem"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:clickable="true">

        <!-- Rating -->
        <TextView
            android:id="@+id/poyntRating"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/priority_none"
            android:text="0.0"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:gravity="center_horizontal|center_vertical"/>

        <!-- Poynt Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/poyntName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:textSize="20dip"
            android:layout_marginLeft="10dip"
            android:text="TEMP"
            android:maxLength="19"/>

            <!-- Address -->
            <TextView
                android:id="@+id/poyntAddress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="4dp"
                android:text="Just some temp data."
                android:textColor="#ff8c8c8c"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="2dp"
                android:maxLength="200"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="bottom"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>